#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, j, head, direction;
    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter the disk requests (in cylinder numbers):\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &req[i]);
    }

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter direction (0 for left, 1 for right): ");
    scanf("%d", &direction);

    req[n] = head;
    n++;

    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if (req[i] > req[j]) {
                int temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }
        }
    }

    int pos;
    for (i = 0; i < n; i++) {
        if (req[i] == head) {
            pos = i;
            break;
        }
    }

    int total_movement = 0;
    printf("\nSeek Sequence:\n");

    if (direction == 1) {
        for (i = pos; i < n; i++) {
            printf("%d ", req[i]);
            if (i != pos) total_movement += abs(req[i] - req[i - 1]);
        }
        for (i = pos - 1; i >= 0; i--) {
            printf("%d ", req[i]);
            total_movement += abs(req[i + 1] - req[i]);
        }
    } else {
        for (i = pos; i >= 0; i--) {
            printf("%d ", req[i]);
            if (i != pos) total_movement += abs(req[i] - req[i + 1]);
        }
        for (i = pos + 1; i < n; i++) {
            printf("%d ", req[i]);
            total_movement += abs(req[i] - req[i - 1]);
        }
    }

    printf("\nTotal head movement = %d\n", total_movement);
    return 0;
}
